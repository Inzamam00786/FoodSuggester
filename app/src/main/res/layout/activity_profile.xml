<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sadiafoodsuggester.inzamam.foodsuggester.ProfileActivity">

   <RelativeLayout
       android:id="@+id/profilerelativelayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <android.support.v7.widget.Toolbar
           android:id="@+id/profiletoolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           app:titleTextColor="@color/actionbartitleColor"
           android:background="@color/colorPrimary"
           android:minHeight="?attr/actionBarSize"
           android:theme="?attr/actionBarTheme" />
       <TextView
           android:id="@+id/profilenametextview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Name:-"
           android:layout_below="@id/profiletoolbar"
           android:textSize="20sp"
           android:layout_margin="@dimen/profileActivityVertical_margin"

           />
       <EditText
           android:id="@+id/profilenameedittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profilenametextview"
           android:hint="Enter Your Name Here"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           />
       <TextView
           android:id="@+id/profileemailtextview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Email"
           android:layout_below="@id/profilenameedittext"
           android:layout_margin="@dimen/activity_vertical_margin"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/profileEmailEditText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profileemailtextview"
           android:hint="Enter Your Email Here"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           />
       <TextView
           android:id="@+id/profilecontacttextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Contact No:-"
           android:layout_below="@id/profileEmailEditText"
           android:layout_margin="@dimen/profileActivityVertical_margin"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/profilecontactEditText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profilecontacttextView"
           android:hint="Enter Your Contact Here"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:inputType="number"
           />
       <TextView
           android:id="@+id/profileagetextview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Age:-"
           android:layout_below="@id/profilecontactEditText"
           android:layout_margin="@dimen/profileActivityVertical_margin"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/profileageEdittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profileagetextview"
           android:hint="Enter Your Age Here"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:inputType="number"
           />
       <TextView
           android:id="@+id/profileheighttextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Height:-"
           android:layout_below="@id/profileageEdittext"
           android:layout_margin="@dimen/profileActivityVertical_margin"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/profileheightEdittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profileheighttextView"
           android:hint="Enter Your Height Here"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:inputType="number"
           />
       <TextView
           android:id="@+id/profileweightTextview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Weight:-"
           android:layout_below="@id/profileheightEdittext"
           android:layout_margin="@dimen/profileActivityVertical_margin"
           android:textSize="20sp"
           />
       <EditText
           android:id="@+id/profileWeightEditText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/profileweightTextview"
           android:hint="Enter Weight in cms"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:inputType="number"
           />
       <RadioGroup
           android:id="@+id/profilegenderRadioGroup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/profileWeightEditText">
           <RadioButton
               android:id="@+id/profileMaleRadioButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Male"/>
           <RadioButton
               android:id="@+id/profileFemaleRadioButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:text="Female"/>
       </RadioGroup>
       <Button
           android:id="@+id/profileupdateButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Update Profile"
           android:textAllCaps="false"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/profilegenderRadioGroup"/>

   </RelativeLayout>

</ScrollView>

