<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.sadiafoodsuggester.inzamam.foodsuggester.MainActivity">

<RelativeLayout
    android:id="@+id/mainfirstrelativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <android.support.v7.widget.Toolbar
       android:id="@+id/mainavtivitytoolbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:background="@color/colorPrimary"
       android:minHeight="?attr/actionBarSize"
       android:theme="?attr/actionBarTheme"
       app:titleTextColor="@color/actionbartitleColor" />

   <Button
       android:id="@+id/fooddiarybtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignTop="@+id/foodsuggestionbtn"
       android:layout_marginStart="20dp"
       android:text="Food Diary"
       android:textAllCaps="false"
       android:textColor="#000000" />

   <Button
       android:id="@+id/foodsuggestionbtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:text="Food Suggestion"
       android:textAllCaps="false"
       android:layout_marginRight="20dp"
       android:layout_marginBottom="10dp"/>

   <RelativeLayout
       android:id="@+id/piechartlayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/fooddiarybtn"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/mainavtivitytoolbar">

      <com.github.mikephil.charting.charts.PieChart
          android:id="@+id/mypiechart"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginBottom="40dp" />

   </RelativeLayout>
</RelativeLayout>


</RelativeLayout>
