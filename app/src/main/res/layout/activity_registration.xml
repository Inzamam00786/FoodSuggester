<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.sadiafoodsuggester.inzamam.foodsuggester.RegistrationActivity">

    <RelativeLayout
        android:id="@+id/regRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:id="@+id/regtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:titleTextColor="@color/actionbartitleColor"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/regnametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regtoolbar"
            android:layout_margin="@dimen/profileActivityVertical_margin"
            android:text="Email:-"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/regnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/regnametextView"
            android:hint="Enter Your Email Here" />

        <TextView
            android:id="@+id/regemailtextivew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/regnametextView"
            android:layout_below="@+id/regnameEditText"
            android:text="Password:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/regEmailEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regemailtextivew"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Your Password Here" />

        <TextView
            android:id="@+id/regcontacttextivew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regEmailEdittext"
            android:layout_margin="@dimen/profileActivityVertical_margin"
            android:text="Name:-"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/regconatctEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regcontacttextivew"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Your Name Here" />
        <TextView
            android:id="@+id/regageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:-"
            android:layout_below="@id/regconatctEditText"
            android:layout_margin="@dimen/profileActivityVertical_margin"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/regageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regageTextView"
            android:hint="Enter Your Age Here"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/regheighttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height:-"
            android:layout_below="@id/regageEditText"
            android:layout_margin="@dimen/profileActivityVertical_margin"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/regheightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regheighttextview"
            android:hint="Enter Your Height Here"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/regweightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight:-"
            android:layout_below="@id/regheightEditText"
            android:layout_margin="@dimen/profileActivityVertical_margin"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/regweightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regweightTextView"
            android:hint="Enter Weight in cms"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            />
        <RadioGroup
            android:id="@+id/reggenderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/regweightEditText">
            <RadioButton
                android:id="@+id/regMaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/regFemaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Female"/>
        </RadioGroup>

        <Button
            android:id="@+id/regprofilebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reggenderRadioGroup"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="createProfileMethod"
            android:text="Create Profile"
            android:textAllCaps="false" />


        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regprofilebutton"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

</ScrollView>
